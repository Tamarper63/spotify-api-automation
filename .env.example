# === LLM (AI Integration) ===
# Provider: ollama / openai / openrouter / together
LLM_PROVIDER=ollama

# Local Ollama API URL
OLLAMA_URL=http://localhost:11434

# Chat model to use
OLLAMA_MODEL=llama3.1

# Optional: embedding model for RAG (if supported by Ollama installation)
OLLAMA_EMBED_MODEL=nomic-embed-text


# === Spotify API Credentials ===
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# User tokens (Authorization Code Flow)
SPOTIFY_REFRESH_TOKEN=your_refresh_token
SPOTIFY_USER_ACCESS_TOKEN=your_access_token

# Default playlist for tests
DEFAULT_PLAYLIST_ID=your_playlist_id


# === Test Configuration ===
# Adjust as needed for your local or CI/CD environment
# Example: pytest HTML report output path
PYTEST_HTML_REPORT=reports/report.html
